{
  "version": "2.0.0",
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "listFiles": false,
    "noLib": false,
    "rootDir": "./",
    "outDir": "./bundles"
  },
  "include": [
    "./index.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "strictMetadataEmit": true
  }
}
